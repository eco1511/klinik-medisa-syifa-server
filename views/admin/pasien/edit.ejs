<%- include ../../partials/header.ejs %>
<%- include ../../partials/preloader.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Edit Pasien</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
              <li class="breadcrumb-item"><a href="/pasien">Pasien</a></li>
              <li class="breadcrumb-item active">Ubah</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Ubah Pasien "<%= pasien.name %>"</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/pasien/edit/<%= pasien._id %>?_method=PUT" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="idpasien">ID</label>
                      <input type="text" class="form-control" value="<%= pasien.idPasien %>" disabled>
                    </div>
                    <div class="form-group">
                      <label for="name">Nama</label>
                      <input type="text" value="<%= pasien.name %>" class="form-control" id="name" name="name" placeholder="Masukkan Nama">
                    </div>
                    <div class="form-group">
                        <label for="tgllahir">Tanggal Lahir</label> <p style="font-size: smaller;">*<i>bulan/tanggal/tahun</i></p>
                        <input type="text" class="form-control date" name="tgllahir" value="<%= moment(pasien.tgllahir).calendar() %>" >
                    </div>
                    <div class="form-group">
                      <label>Jenis Kelamin</label>
                      <select class="form-control" name="jenis" value="<%= pasien.jenis %>">
                        <option>Laki-Laki</option>
                        <option>Perempuan</option>
                      </select>
                    </div>
                    <div class="form-group">
                        <label for="alamat">Alamat</label>
                        <textarea class="form-control" value="<%= pasien.alamat %>" name="alamat" placeholder="Masukan Alamat "><%= pasien.alamat %></textarea>
                    </div>
                    <div class="form-group">
                      <label for="phoneNumber">Nomor Telephone</label>
                      <input type="text" class="form-control" id="phoneNumber" value="<%= pasien.phoneNumber %>" name="phoneNumber" placeholder="Masukkan Nomor Handphone">
                    </div>
                    </div>
              
                  <!-- /.card-body -->
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
            <!-- /.card -->
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>